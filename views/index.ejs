<% layout("boilerplate.ejs") -%>
<body>
 <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listings of Alllistings) { %>
    <a href="/listing/<%= listings._id %>" class="card-anchor">
    <div class="card col" >
        <img src="<%= listings.image %>" class="card-img-top" alt="..." style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listings.title %></b>
            <br>
            &#8377;<%= listings.price.toLocaleString("en-IN")%>/night
        </p>
        </div>
      </div>
      <% } %>
    </div>
</a>
</body>


