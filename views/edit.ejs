<% layout("boilerplate.ejs") -%>
<body>

    <div class="row">
        <div class="col-8 offset-2">
    
    <form method="post" action="/listings/<%= listings._id %>?_method=PUT">
        <br>
        <div class="mb-3">
            <label for="name" class="form-label">Title</label>
        <input type="text" name="listing[title]" value="<%= listings.title %>" class="form-control">
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input type="text" name="listing[description]" value="<%= listings.description %>"class="form-control">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Enter url</label>
            <input type="text" name="listing[image]" value="<%= listings.image %>" class="form-control">
        </div>
        <div class="row">
            <div class="col-md-4">
                <label for="price" class="form-label">price</label>
                <input type="number" name="listing[price]"  value="<%= listings.price%>" class="form-control"> 
            </div>
            <div class="col-md-8">
                <label for="country" class="form-label">country</label>
                <input type="text" name="listing[country]" value="<%= listings.country%>" class="form-control"> 
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input type="text" name="listing[location]" value="<%= listings.location%>" class="form-control">
        </div>
   
         
        <button class="btn btn-danger mb-2">Add</button>
        <br>
    </form>
    </div>
</div>

</body>
