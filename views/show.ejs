<% layout("boilerplate.ejs") -%>
<div class="row">
    <div class="col-8 offset-2">
<body>
    <div class="card col-6 mt-2 offset-3">
        <img src="<%= listings.image %>" class="card-img-top extra-class" alt="listings_image">
    
        <div class="card-body">
          <p class="card-text">
            <b><%= listings.title %> </b><br>
            <%= listings.description %> <br>
            &#8377;<%= listings.price.toLocaleString("en-IN") %> <br>
            <%= listings.location %> <br>
            <%= listings.country %> <br>
        </p>
        </div>
    </div>
    <a href="/listing/<%= listings._id %>/edit" class="btn btn-dark offset-3">Edit</a>
    <br>
    <form method="post" action="/listings/<%= listings._id %>?_method=DELETE">
        <button class="btn btn-danger mt-2 offset-3">Delete</button>
    </form>
         
</div>
</div>
</body>
